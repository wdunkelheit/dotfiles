[colors]
background = #2e3440
background-alt = #81a1c1
foreground = #d8dee9
foreground-alt = #e5e9f0
primary = #8fbcbb
secondary = #e60053
battery = #bf616a
batteryCharging = #a3be8c
alert = #bd2c40

[bar/mybar]
bottom = false

enable-ipc = true
width = 100%
height = 24

fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-bottom-size = 2
border-color = #000000

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 1

font-0 = Hack:pixelsize=9;1
font-1 = JoyPixels:scale=10:style=Regular;2

modules-left = i3
modules-center = mpd capslock
modules-right = filesystem backlight-acpi pulseaudio pacman-updates rss bitcoin xmr memory cpu date battery powermenu

tray-position = right
tray-padding = 2 

wm-restack = i3

;override-redirect = true

cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

